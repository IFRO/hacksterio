@{
    // ViewBag.Title = "Home Page";
}

<h2>New Schedule</h2>
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" asp-controller="Schedule" asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="RelayId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="RelayId" class="form-control" />

                </div>
            </div>

            <div class="form-group">
                <label asp-for="ScheduledTime" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ScheduledTime" class="form-control" type="datetime-local" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="State" class="col-md-2 control-label">Turn On?</label>
                <div class="col-md-10">
                    <div class="checkbox">
                        <input asp-for="State" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>
        </form>
        </div>
    </div>